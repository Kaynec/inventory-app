<%- include('header') -%>
<div id='categories'>

<div class="wrapper">
        <% category_list.map(el=>{ %>
            <div class="card">
            <h3 class="card-title"> <%= el.name %>  </h3>
            <p class="card-content"><%= el.description%></p>

         <div class="category-buttons">
            <button class="card-btn"><a href="<%= `/categories/${el._id}/update` %>"> update </a> </button>
            <button class="card-btn"><a href="<%= `/categories/${el._id}/delete` %>"> delete </a> </button>
         </div>
        </div>

        <% })%>
    </div>

<div class="category-create">
    <i class="gg-add-r"></i>
    <h5>Add Category </h5>
</div>

<script>
    document.querySelector('.category-create').addEventListener('click' , (e)=> {
        window.location = "/categories/create";
    })
    
</script>

<%- include('footer') -%>


